@model MoviesWebApp.Models.Genre

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Edit Genre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="card p-2 bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GenreID" />
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Save" class="btn btn-primary p2 mr-2" /> |
                <a asp-action="Index" class="btn btn-primary p2 ml-2">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
