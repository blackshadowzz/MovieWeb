@model MoviesWebApp.Models.Genre

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Create Genre</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="border rounded-1 p-2 box-shadow bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GenreName" class="control-label"></label>
                <input asp-for="GenreName" class="form-control" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <input type="submit" value="Create" class="mr-2 btn btn-primary" />|
                <a asp-action="Index" class="ml-2 btn btn-primary">Back to List</a>
                
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-end">
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
