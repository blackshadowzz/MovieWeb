@model MoviesWebApp.Models.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["TitleForm"] = "Edit Movie";
    ViewData["SubNavbar"] = "movie";
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MovieId" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReleasedDate" class="control-label"></label>
                        <input asp-for="ReleasedDate" class="form-control" />
                        <span asp-validation-for="ReleasedDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Language" class="control-label"></label>
                        <select asp-for="Language" asp-items="Html.GetEnumSelectList<MovieLanguage>()" class="form-control">
                            <option style="display:none;">Select Movie Language</option>
                        </select>
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Budget" class="control-label"></label>
                        <input asp-for="Budget" class="form-control" />
                        <span asp-validation-for="Budget" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration" class="control-label"></label>
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AgeLimited" class="control-label"></label>
                        <input asp-for="AgeLimited" class="form-control" />
                        <span asp-validation-for="AgeLimited" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                   <div class="row">
                       <div class="col-md-6">
                                <input type="hidden" asp-for="CoverImage" class="form-control" />
                            <div class="form-group">
                                <label for="formFile" class="form-label">Cover Image</label>
                                <input asp-for="FrontImage" type="file" accept="Images/*" class="form-control"  />
                                <span asp-validation-for="FrontImage" class="text-danger"></span>
                            </div>
                       </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="formFile" class="form-label">Back Image</label>
                              
                                <input asp-for="BackImage" type="file" accept="Images/*" class="form-control" />
                                <span asp-validation-for="BackImage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="hidden" asp-for="BackCoverImage" class="form-control" />
                            </div>
                        </div>
                   </div>
                 
                   
                 
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <div class="form-floating">
                    <textarea class="form-control" asp-for="Description" placeholder="Leave a description here" id="floatingTextarea2" style="height: 100px"></textarea>
                    <label for="floatingTextarea2">Description</label>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="d-flex justify-content-between">
            
                <input type="submit" value="Save" class="btn btn-primary" />
                <div>
                    <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
