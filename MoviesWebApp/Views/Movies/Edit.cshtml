@model MoviesWebApp.Models.MovieVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["TitleForm"] = "Edit Movie";
    ViewData["SubNavbar"] = "movie";
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movie.MovieId" />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Movie.Title" class="control-label"></label>
                        <input asp-for="Movie.Title" class="form-control" />
                        <span asp-validation-for="Movie.Title" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Movie.ReleasedDate" class="control-label"></label>
                                <input asp-for="Movie.ReleasedDate" class="form-control" />
                                <span asp-validation-for="Movie.ReleasedDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Movie.Language" class="control-label"></label>
                                <select asp-for="Movie.Language" asp-items="Html.GetEnumSelectList<MovieLanguage>()" class="form-control">
                                    <option style="display:none;">Select Movie Language</option>
                                </select>
                                <span asp-validation-for="Movie.Language" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Movie.Rating" class="control-label"></label>
                                <input asp-for="Movie.Rating" class="form-control" />
                                <span asp-validation-for="Movie.Rating" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Movie.Budget" class="control-label"></label>
                                <input asp-for="Movie.Budget" class="form-control" />
                                <span asp-validation-for="Movie.Budget" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Movie.Duration" class="control-label"></label>
                                <input asp-for="Movie.Duration" class="form-control" />
                                <span asp-validation-for="Movie.Duration" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Movie.AgeLimited" class="control-label"></label>
                                <input asp-for="Movie.AgeLimited" class="form-control" />
                                <span asp-validation-for="Movie.AgeLimited" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="hidden" asp-for="Movie.CoverImage" class="form-control" />
                            <label for="formFile" class="form-label">Cover Image</label>
                            <input asp-for="Movie.FrontImage" type="file" accept="Images/*" class="form-control" id="formFile" />
                            <span asp-validation-for="Movie.FrontImage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Movie.Description">Description</label>
                        <div class="form-floating">
                            <textarea class="form-control" asp-for="Movie.Description" placeholder="Leave a description here" id="floatingTextarea2" style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Description</label>
                        </div>
                        <span asp-validation-for="Movie.Description" class="text-danger"></span>
                    </div>
                </div>
