@model MoviesWebApp.Models.Studio

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="container justify-content-center">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Revenue" class="control-label"></label>
                    <input asp-for="Revenue" class="form-control" />
                    <span asp-validation-for="Revenue" class="text-danger"></span>
                </div>
                <div class="mt-3 d-flex justify-content-between">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <div>
                        <a asp-action="Index" class="btn btn-outline-info">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

   
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
