@model IEnumerable<MoviesWebApp.Models.Studio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    <a asp-action="Create" class="btn btn-outline-primary"> <i class="bi bi-plus-circle"></i> Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revenue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Revenue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
