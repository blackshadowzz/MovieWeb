@model IEnumerable<MoviesWebApp.Models.Studio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["TitleForm"] = "Studios";
    ViewData["SubNavbar"] = "studio";
}


<p>
    <a asp-action="Create" class="btn btn-outline-primary"> <i class="bi bi-plus-circle"></i> Create New</a>
</p>
<table class="table table-hover table-striped shadow">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Revenue)
            </th>
            <th style="width:15%"> Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Revenue)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.StudioId"><i class="bi bi-pen"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.StudioId"><i class="bi bi-eye"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.StudioId"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
